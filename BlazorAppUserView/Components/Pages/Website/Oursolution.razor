    <style>
        :root {
            --primary-color: #FF6B00;
            --secondary-color: #333333;
            --dark-color: #121212;
            --light-color: #f8f9fa;
            --text-color: #333333;
            --text-light: #777777;
            --bg-grey: #f5f5f5;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
