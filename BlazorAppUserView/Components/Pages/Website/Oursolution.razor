            background: linear-gradient(135deg, rgba(255,107,0,0.1) 0%, rgba(255,255,255,1) 100%);
            padding: 180px 5% 100px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .solutions-hero h1 {
            font-size: 3.5rem;
            margin-bottom: 1.5rem;
            color: var(--secondary-color);
            opacity: 0;
            transform: translateY(30px);
            animation: fadeInUp 1s forwards 0.3s;
        }

        .solutions-hero p {
            font-size: 1.2rem;
            color: var(--text-light);
            max-width: 700px;
            margin: 0 auto 2.5rem;
            opacity: 0;
            transform: translateY(30px);
            animation: fadeInUp 1s forwards 0.5s;
        }

        .hero-pattern {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            background-image: radial-gradient(rgba(255,107,0,0.1) 1px, transparent 1px);
            background-size: 30px 30px;
            z-index: -1;
            opacity: 0.5;
        }

        /* Solutions Grid */
        .solutions-container {
            padding: 5rem 5%;
            background-color: white;
        }

        .section-header {
            text-align: center;
            margin-bottom: 4rem;
        }

        .section-header h2 {
            font-size: 2.5rem;
            color: var(--secondary-color);
            margin-bottom: 1rem;
            position: relative;
            display: inline-block;
        }

        .section-header h2::after {
            content: '';
            position: absolute;
            width: 50%;
            height: 4px;
            background: var(--primary-color);
            bottom: -10px;
            left: 25%;
            border-radius: 2px;
        }

        .section-header p {
            color: var(--text-light);
            max-width: 700px;
            margin: 0 auto;
        }

        .solutions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }

        .solution-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            transform: translateY(50px);
            opacity: 0;
        }

        .solution-card.animate {
            transform: translateY(0);
            opacity: 1;
        }

        .solution-card:hover {
            transform: translateY(-10px) !important;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }

        .solution-icon {
            height: 120px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, rgba(255,107,0,0.1) 0%, rgba(255,255,255,1) 100%);
            color: var(--primary-color);
            font-size: 3rem;
        }

        .solution-content {
            padding: 2rem;
        }

        .solution-content h3 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: var(--secondary-color);
        }

        .solution-content p {
            color: var(--text-light);
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        .solution-link {
            display: inline-flex;
            align-items: center;
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s;
        }

        .solution-link i {
            margin-left: 8px;
            transition: transform 0.3s;
        }

        .solution-link:hover {
            color: #e05d00;
        }

        .solution-link:hover i {
            transform: translateX(5px);
        }

        /* Features Section */
        .features-section {
            padding: 5rem 5%;
            background-color: var(--bg-grey);
        }

        .features-container {
            display: flex;
            flex-wrap: wrap;
            gap: 2rem;
            margin-top: 3rem;
        }

        .feature-tabs {
            flex: 1;
            min-width: 300px;
        }

        .feature-tab {
            padding: 1.5rem;
            margin-bottom: 1rem;
            background: white;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            border-left: 4px solid transparent;
        }

        .feature-tab.active {
            border-left: 4px solid var(--primary-color);
            background: linear-gradient(90deg, rgba(255,107,0,0.05) 0%, rgba(255,255,255,1) 100%);
        }

        .feature-tab h3 {
            color: var(--secondary-color);
            margin-bottom: 0.5rem;
        }

        .feature-tab p {
            color: var(--text-light);
            font-size: 0.9rem;
        }

        .feature-content {
            flex: 2;
            min-width: 300px;
            position: relative;
            height: 400px;
        }

        .feature-preview {
            position: absolute;
            width: 100%;
            height: 100%;
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            opacity: 0;
            transform: scale(0.9);
            transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        .feature-preview.active {
            opacity: 1;
            transform: scale(1);
            z-index: 1;
        }

        .feature-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .preview-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 2rem;
            background: linear-gradient(0deg, rgba(0,0,0,0.7) 0%, transparent 100%);
