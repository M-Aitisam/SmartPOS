@page "/dashboard"
@layout MainLayout
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="dashboard-container">
    <div class="dashboard-header">
        <h2>Welcome to</h2>
        <h1 class="dashboard-title">Restaurant Management</h1>
    </div>

    <div class="container">
      
        <div class="row g-4 justify-content-center">
            @foreach (var item in DashboardItems)
            {
                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                    <div class="dashboard-card" @onclick="() => NavigateTo(item.Route)">
                        <div class="card-icon">
                            <i class="@item.Icon"></i>
                        </div>
                        <div class="card-label">@item.Label</div>
                        <div class="card-hover-effect"></div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="mt-auto d-flex justify-content-end pe-4">
        <DashboardNavigator />
    </div>

</div>

@code {
    private List<DashboardItem> DashboardItems = new()
    {
        new DashboardItem("BusinessRegister", "fas fa-user", "businessdetails"),
        new DashboardItem("Login", "fa fa-sign-in", "login"),
        new DashboardItem("Categories", "fas fa-edit", "categories"),
                // new DashboardItem("Units", "fas fa-university", "units"),
         // new DashboardItem("Materials", "fas fa-th", "materials"),

        // new DashboardItem("Sales", "fas fa-shopping-cart", "sales"),
        // new DashboardItem("Purchases", "fas fa-credit-card", "purchases"),
        // new DashboardItem("Tables", "fas fa-table", "tables"),
        // new DashboardItem("Waiters", "fas fa-user-tie", "waiters"),
        // new DashboardItem("Adjustments", "fas fa-adjust", "adjustments"),
        // new DashboardItem("Recipes", "fas fa-project-diagram", "recipes"),
        new DashboardItem("Products", "fas fa-boxes", "product"),
        new DashboardItem("Menu", "fas fa-hamburger", "menu"),
        new DashboardItem("AdminPage", "fas fa-rocket", "adminpage"),
        new DashboardItem("Order History", "fas fa-copy", "order-history"),
        new DashboardItem("Sales Report", "fas fa-shopping-cart", "salesreport")
        
    };

    private class DashboardItem
    {
        public string Label { get; }
        public string Icon { get; }
        public string Route { get; }

        public DashboardItem(string label, string icon, string route)
        {
            Label = label;
            Icon = icon;
            Route = route;
        }
    }

    private void NavigateTo(string route)
    {
        NavigationManager.NavigateTo($"/{route}");
    }
}

<style>
    .dashboard-container {
        background: #f8f9fa;
        min-height: 100vh;
        padding: 2rem 0;
    }

    .dashboard-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .dashboard-title {
        color: #6c5ce7;
        font-weight: 700;
        font-size: 2.5rem;
        margin-top: 0.5rem;
        text-shadow: 0 2px 4px rgba(108, 92, 231, 0.2);
        position: relative;
        display: inline-block;
    }

        .dashboard-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background: #a29bfe;
            border-radius: 2px;
        }

    .dashboard-header h2 {
        color: #6c5ce7;
        opacity: 0.8;
        font-size: 1.5rem;
        margin-bottom: 0;
    }

    .dashboard-card {
        background: white;
        border-radius: 16px;
        padding: 1.5rem 1rem;
        text-align: center;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        box-shadow: 0 4px 20px rgba(108, 92, 231, 0.15);
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        border: none;
    }

        .dashboard-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #6c5ce7, #a29bfe);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .dashboard-card:hover::before {
            opacity: 1;
        }

        .dashboard-card:hover {
            transform: translateY(-8px) scale(1.03);
            box-shadow: 0 15px 30px rgba(108, 92, 231, 0.25);
        }

    .card-icon {
        margin-bottom: 1rem;
        z-index: 2;
    }

        .card-icon i {
            font-size: 2.2rem;
            color: #6c5ce7;
            transition: all 0.3s ease;
            background: rgba(108, 92, 231, 0.1);
            width: 60px;
            height: 60px;
            line-height: 60px;
            border-radius: 50%;
            display: inline-block;
        }

    .card-label {
        font-weight: 600;
        color: #6c5ce7;
        transition: all 0.3s ease;
        font-size: 0.95rem;
        z-index: 2;
    }

    .card-hover-effect {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, rgba(108, 92, 231, 0.9) 0%, rgba(162, 155, 254, 0.9) 100%);
        opacity: 0;
        transition: opacity 0.4s ease;
        z-index: 1;
    }

    .dashboard-card:hover .card-hover-effect {
        opacity: 1;
    }

    .dashboard-card:hover .card-icon i {
        color: white;
        background: rgba(255, 255, 255, 0.2);
        transform: rotate(10deg) scale(1.1);
    }

    .dashboard-card:hover .card-label {
        color: white;
        transform: translateY(5px);
    }

    @@media (max-width: 768px) {
        .dashboard-title {
            font-size: 2rem;
        }

        .dashboard-card {
            padding: 1.2rem 0.8rem;
        }

        .card-icon i {
            font-size: 1.8rem;
            width: 50px;
            height: 50px;
            line-height: 50px;
        }
    }
</style>